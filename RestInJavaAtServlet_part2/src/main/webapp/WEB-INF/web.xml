<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

  <!--Get all persons-->
  <servlet>
    <servlet-name>GetPersons</servlet-name>
    <servlet-class>Controller.PersonsController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetPersons</servlet-name>
    <url-pattern>/persons</url-pattern>
  </servlet-mapping>

  <!--Get person by id-->
  <servlet>
    <servlet-name>GetPerson</servlet-name>
    <servlet-class>Controller.PersonController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetPerson</servlet-name>
    <url-pattern>/personById</url-pattern>
  </servlet-mapping>

  <!--Add new person-->
  <servlet>
    <servlet-name>NewPerson</servlet-name>
    <servlet-class>Controller.NewPersonController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>NewPerson</servlet-name>
    <url-pattern>/addNewPerson</url-pattern>
  </servlet-mapping>

  <!--Update person by id-->
  <servlet>
    <servlet-name>UpdatePerson</servlet-name>
    <servlet-class>Controller.UpdatePersonController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdatePerson</servlet-name>
    <url-pattern>/updatePersonById</url-pattern>
  </servlet-mapping>

  <!--Delete person by id-->
  <servlet>
    <servlet-name>DeletePerson</servlet-name>
    <servlet-class>Controller.DeletePersonController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DeletePerson</servlet-name>
    <url-pattern>/deletePersonById</url-pattern>
  </servlet-mapping>

  <!--Delete person by id-->
  <servlet>
    <servlet-name>MainController</servlet-name>
    <servlet-class>Controller.MainController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MainController</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!--Update person by id-->
  <servlet>
    <servlet-name>UpdatePersonGet</servlet-name>
    <servlet-class>Controller.UpdatePersonGetController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdatePersonGet</servlet-name>
    <url-pattern>/updatePersonByIdGet</url-pattern>
  </servlet-mapping>
</web-app>
