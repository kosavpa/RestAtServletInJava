<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>DeletePerson</servlet-name>
        <servlet-class>Controller.DeletePersonController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>NewPerson</servlet-name>
        <servlet-class>Controller.NewPersonController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Person</servlet-name>
        <servlet-class>Controller.PersonController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Persons</servlet-name>
        <servlet-class>Controller.PersonsController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdatePerson</servlet-name>
        <servlet-class>Controller.UpdatePersonController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeletePerson</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>NewPerson</servlet-name>
        <url-pattern>/new</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Person</servlet-name>
        <url-pattern>/person</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Persons</servlet-name>
        <url-pattern>/persons</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdatePerson</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
</web-app>